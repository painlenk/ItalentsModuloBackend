{
  "openapi": "3.0.0",
  "info": {
    "title": "api pizzaria",
    "description": "api de ecommerce pizzaria ITalents",
    "contact": {
      "name": "Leonardo"
    }
  },
  "servers": [
    {
      "url": "http://localhost:3000/",
      "description": "Api de teste local"
    }
  ],
  "paths": {
    "/user/all": {
      "get": {
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "sumary": "Lista todos os usuários",
        "description": "Rota responsavel por listar todos os usuários da api",
        "tags": [
          "Usuário"
        ],
        "responses": {
          "200": {
            "description": "Sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "$ref": "#/components/schemas/user"
                  }
                }
              }
            }
          },
          "401": {
            "description": "Erro de autenticação, problema com o Token",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Erro na requisição",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Erro no servidor",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/user/{id}": {
      "get": {
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "sumary": "Busca o usuário com base no id",
        "description": "Rota responsavel por buscar o usuários da api",
        "tags": [
          "Usuário"
        ],
        "parameters": [
          {
            "in": "query",
            "required": true,
            "scheme": {
              "type": "string"
            },
            "name": "id"
          }
        ],
        "responses": {
          "200": {
            "description": "Retorna um usuário que foi encontrado pelo id",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/user"
                }
              }
            }
          },
          "401": {
            "description": "Erro de autenticação, problema com o Token",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Erro na requisição",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Erro no servidor",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/user/create": {
      "post": {
        "sumary": "Cria um novo usuário",
        "description": "Rota responsavel por criar o usuários da api",
        "tags": [
          "Usuário"
        ],
        "parameters": [
          {
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/components/schemas/user"
            },
            "name": "body"
          }
        ],
        "responses": {
          "201": {
            "description": "Retorna o objeto criado no banco",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "$ref": "#/components/schemas/user"
                  }
                }
              }
            }
          },
          "500": {
            "description": "Erro no servidor",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/user/update/{id}": {
      "put": {
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "sumary": "Busca o usuário com base no id",
        "description": "Rota responsavel por buscar o usuários da api",
        "tags": [
          "Usuário"
        ],
        "responses": {
          "201": {
            "description": "aaa"
          }
        }
      }
    },
    "/user/delete/{id}": {
      "delete": {
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "sumary": "Busca o usuário com base no id",
        "description": "Rota responsavel por buscar o usuários da api",
        "tags": [
          "Usuário"
        ],
        "responses": {
          "201": {
            "description": "aaa"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "jwt"
      }
    },
    "schemas": {
      "user": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "cpf": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          },
          "isAdmin": {
            "type": "boolean"
          },
          "address": {
            "type": "string"
          },
          "createdAt": {
            "type": "string"
          }
        }
      },
      "pizza": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "size": {
            "type": "string"
          },
          "price": {
            "type": "number"
          },
          "createdAt": {
            "type": "string"
          }
        }
      },
      "cart": {
        "type": "object",
        "properties": {
          "pizzas": {
            "type": "string"
          },
          "createdAt": {
            "type": "string"
          },
          "totalPrice": {
            "type": "number"
          },
          "freigth": {
            "type": "number"
          },
          "userId": {
            "type": "string"
          }
        }
      }
    }
  }
}